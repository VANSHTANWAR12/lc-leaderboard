{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/css/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "public/js/*.js",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.js"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/login",
      "dest": "/public/login.html"
    },
    {
      "src": "/about.html",
      "dest": "/public/about.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}